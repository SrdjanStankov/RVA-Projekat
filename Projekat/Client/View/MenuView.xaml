<UserControl
    x:Class="Client.View.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockPanel VerticalAlignment="Top">
            <Menu HorizontalAlignment="Stretch">
                <MenuItem Command="{Binding DashboardCommand}" Header="Dashboard" />
                <MenuItem Command="{Binding PlannersCommand}" Header="Planners" />
                <MenuItem Command="{Binding AddUserCommand}" Header="Add User" />
                <MenuItem Command="{Binding LogoutCommand}" Header="Logout" />
            </Menu>
        </DockPanel>
    </Grid>
</UserControl>
